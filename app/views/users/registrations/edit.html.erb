<h2><%= t('users.registrations.edit.update') %></h2>

<h3><%= t('users.registrations.change_mail_and_password') %></h3>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="field">
    <%= f.label :password %> <i><%= t("users.registrations.edit.leave_blank_if_you_don_t_want_to_change_it") %></i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('users.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <h3><%= t('users.registrations.change_user_info') %></h3>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
    <br />
    <em><%= t('users.registrations.edit.please_enter_numbers_only') %></em>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :introduction %>
    <%= f.text_area :introduction %>
  </div>

  <div class="actions">
    <%= f.submit t('users.registrations.edit.update') %>
  </div>
<% end %>

<h3> <%= t('users.registrations.edit.cancel_my_account') %></h3>

<p><%= button_to t('users.registrations.edit.cancel_my_account'), registration_path(resource_name), data: { confirm: t('users.registrations.edit.are_you_sure') }, method: :delete %></p>

<%= link_to t('users.shared.links.back'), :back %>
