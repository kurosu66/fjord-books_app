<h2><%= t('views.edit_user.edit_user') %></h2>

<h3><%= t('views.edit_user.change_mail_and_password') %></h3>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="field">
    <%= f.label :password %> <i><%= t("views.edit_user.leave_blank_if_you_don't_want_to_change_it") %></i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> <%= t('views.common.characters_minimum') %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <h3><%= t('views.edit_user.change_user_info') %></h3>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :introduction %>
    <%= f.text_area :introduction %>
  </div>

  <div class="actions">
    <%= f.submit t('views.common.update') %>
  </div>
<% end %>

<h3> <%= t('views.edit_user.cancel_my_account') %></h3>

<p><%= button_to t('views.common.destroy'), registration_path(resource_name), data: { confirm: t('views.common.delete_confirm') }, method: :delete %></p>

<%= link_to t('views.common.back'), :back %>
