<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to t('views.common.books'), books_path %> |
      <%= link_to t('views.common.users_index'), users_path %> |
    <% end %>
    <%= link_to t('views.common.logout'), destroy_user_session_path, method: :delete %>
    <%= yield %>
  </body>
</html>
